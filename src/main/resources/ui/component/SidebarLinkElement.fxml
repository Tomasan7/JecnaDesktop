<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<fx:root alignment="CENTER_LEFT" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <ImageView fx:id="icon" fitHeight="35.0" fitWidth="35.0">
        <!-- Used as a placeholder -->
        <Image url="@../icon/grades-icon.png" />
    </ImageView>

    <Label fx:id="label">
        <HBox.margin><Insets left="10.0" /></HBox.margin>
    </Label>

    <ImageView fx:id="linkIcon" fitHeight="20.0" fitWidth="20.0">
        <Image url="@../icon/external-link-icon.png" />
        <HBox.margin><Insets left="10.0" /></HBox.margin>
    </ImageView>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <stylesheets>
        <URL value="@../styles.css" />
    </stylesheets>
</fx:root>
